<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/im"
    tools:context="com.example.fahmi.contactservice.BusActivity">

        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Number Of the Bus Services"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/textView15" />

            <Button
                android:id="@+id/sohagParibahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Sohag paribahan"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />


            <Button
                android:id="@+id/egalePori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Eagle paribahan"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />


            <Button
                android:id="@+id/hanif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Hanif paribahan"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/egalePori"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/greeenLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Green Line"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/tungipara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Tungipara express"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/greenLine"
                android:layout_alignParentStart="true" />


        </TableLayout>



</ScrollView>
