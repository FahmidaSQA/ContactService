<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/six"
    tools:context="com.example.fahmi.contactservice.Hospi">

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Number Of the Hospital Service"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/textView4" />


    <Button
        android:id="@+id/kmc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Khulna Medical College Hospital "
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


    <Button
        android:id="@+id/sishuhospi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Khulna Shishu Hospital"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/kmc"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ibhpsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Islamic Bank Hospital "
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gazihospi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Gazi Medical College Hospital "
        android:layout_marginTop="13dp"
        android:layout_below="@+id/ibhpsi"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/AkijHospi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Akij Medical College Hospital "
        android:layout_marginTop="13dp"
        android:layout_below="@+id/gazihospi"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Rupshahealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Rupsha Upazila Health Complex"
        android:layout_below="@+id/AkijHospi"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fultola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Fultola Upazila Health Complex"
        android:layout_below="@+id/Rupshahealth"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/batiaghata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_below="@+id/fultola"
        android:drawableRight="@android:drawable/sym_action_call"
        android:text="Batiaghata Upazila Health Complex"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    </TableLayout>

</ScrollView>
