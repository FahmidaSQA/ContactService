<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foodcorner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/foodone"
    tools:context="com.example.fahmi.contactservice.foodcorner">

        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Number Of the Hotels and Restautants"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/textView6" />


            <Button
                android:id="@+id/castleSalam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Hotel Castle Salam"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />


            <Button
                android:id="@+id/royelHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Hotel Royel International"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/kmc"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/cityInn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="City inn "
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


            <Button
                android:id="@+id/westernInn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Western inn "
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/millennium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Millennium"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/ibhpsi"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/tigerGarden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Tiger Garden"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/gazihospi"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/grillHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Grill House"
                android:layout_below="@+id/AkijHospi"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/borakHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Borrak"
                android:layout_below="@+id/Rupshahealth"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/delaxHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_below="@+id/fultola"
                android:drawableRight="@android:drawable/sym_action_call"
                android:text="Hotel Delax"
                android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </TableLayout>

</ScrollView>
