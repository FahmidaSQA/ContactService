<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainedu"
    tools:context="com.example.fahmi.contactservice.Edu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education Sector"
        android:textSize="35dp"
        android:layout_marginTop="132dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:text="Schools"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/school"
        android:textColor="#ffffff"
        android:background="@color/colorBlue"/>

    <Button
        android:text="Universitys"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:id="@+id/versity"
        android:layout_below="@+id/college"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@color/colorPurple"/>

    <Button
        android:text="Colleges"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:id="@+id/college"
        android:textColor="#ffffff"
        android:background="@color/colorPink"
        android:layout_below="@+id/school"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
