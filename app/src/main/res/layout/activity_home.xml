<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fahmi.contactservice.HomeActivity"
    android:background="@drawable/backsecond">

        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.fahmida.kci.ScondActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/searchicon"
                    android:id="@+id/search_bar"
                    android:onClick="browser1"
                    android:padding="5dp"
                    android:layout_gravity="right"/>

            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Education Sector"
                android:layout_marginTop="10dp"
                android:id="@+id/Edu"
                android:textSize="20sp"
                android:background="#d62d20"
                android:textAllCaps="false"
                android:textStyle="bold"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hospital Service"
                android:layout_marginTop="15dp"
                android:id="@+id/Hospi"
                android:onClick="buttonOnClick"
                android:textSize="20sp"
                android:background="#ffa700"
                android:textAllCaps="false"
                android:textStyle="bold"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:id="@+id/pol"
                android:background="#005555"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fire Service"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:background="#fb2e01"
                android:id="@+id/Fire"
                android:textStyle="bold"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ticket Counter"
                android:layout_marginTop="15dp"
                android:background="#008744"
                android:textAllCaps="false"
                android:id="@+id/ticket"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hotel And Restaurants"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:id="@+id/food"
                android:textSize="20sp"
                android:background="#d9534f"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/about"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/infoicon"
                    android:padding="5dp"/>

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/mapicon"
                    android:id="@+id/mappic"
                    android:padding="5dp"/>


            </RelativeLayout>

        </TableLayout>
    </ScrollView>

